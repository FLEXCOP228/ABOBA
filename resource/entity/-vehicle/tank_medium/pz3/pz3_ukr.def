{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.2))
	{props "medium" "turret_rotator" "vision_vehicle_high" "muzzle_small"}
	
	{extender "enumerator"
		{digit_folder "ger"}
	}

	{volume "body1"
		{tags "body"}
		{component "body"}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
	}


	("armor_medium" turret(80 80 80 80) body(80 80 80 82))
	("armor_engine"  t(80 80 80 80))
	("armor_mantlet" t(80))

	("crew_4_human")

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_right"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_lowArmor"} 	{end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
		{anm "armor2"
			{forward	{begin	"board_lowArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor1))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor2))
	("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor1))

	{extender "inventory"
		{box
			{item "ammo bullet50 ap" 55}
			{item "ammo bullet50 fg" 44}
			{item "ammo bullet50 apcr" 5}
			{item "ammo mgun" 2250}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "50mm_kwk39" filling "ammo bullet50 ap" 1}
			("abm_medium")	
		}
		{place "mgun1"
			{type "mgun_hull"}
			{weapon "mg34" filled}
			{foresight "foresight4"}
			{gunner "driver"}
			{charger "driver"}
			("abm_mgun")
		}
		{place "mgun2"
			{type "mgun_coaxial"}
			{weapon "mg34" filled}
			{foresight "foresight5"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 1}
	{Chassis
		("tank_trace" fx("tracks_mid") step(666) len(666))
		{Locomotion ("locomotion")
			{MaxSpeed   5}
			{maxSpeedAtMaxTurn 228}
			{StartTime 	 5}
			{TurnTime  	 5}
    		{TurnStart 1.4}
     		{BrakeTime   1} 
    		{StopTime    0.1}
     		{TurnRadius  8} 
    		{TurnStop   0.7}
     		{Gears  0.2 0.5 1}
     		{RearGears 0.34}
		}
		{FuelBag
			{volume 320 }	
			{rate	110 }   
			{remain 320 }
			{fuel "fuel"}
		}
		{speed
        	{Normal  15}
        	{Slow  20}
    	}
	}

	{Extension "pz3j.mdl"}
	
	{bone "turret"
		{speed 0.5}
	}
	{bone "gun_rot"
		{speed 0.5}
	}
}

